@model Harmic.Models.TbProduct

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xoá sản phẩm</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xoá sản phẩm</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Delete">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail">Tiêu đề:</label>
                                    @Html.DisplayFor(model => model.Title)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail">Alias:</label>
                                    @Html.DisplayFor(model => model.Alias)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail">Danh mục:</label>
                                    @Html.DisplayFor(model => model.CategoryProductId)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail">Chi tiết:</label>
                                    @Html.DisplayFor(model => model.Detail)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail">Ảnh:</label>
                                    <p>
										<img src="@Html.DisplayFor(model => model.Image)" />
                                    </p>
                                </div>
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="ProductId" />
                                    <input type="submit" value="Xoá" class=" btn btn-danger" />
                                    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                                </form>
                            </div>
                            <!-- /.card-body -->
                        </form>
                    </div>
                    <!-- /.card -->

                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->